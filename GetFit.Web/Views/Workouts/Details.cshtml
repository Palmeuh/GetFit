@model GetFit.Domain.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Workout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>


<div class="tableContainer">

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Description
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var excercise in Model.Excercises)
            {
                <tr class="tableRow">
                    <td class="excerciseName">
                        @Html.DisplayFor(modelItem => excercise.Name)
                    </td>
                    <td class="excerciseCategory">
                        @Html.DisplayFor(modelitem => excercise.Category)
                    </td>
                    <td class="excerciseDescription">
                        @Html.DisplayFor(modelItem => excercise.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
